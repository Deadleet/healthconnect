<h1>Measures#new</h1>
<p>Find me in app/views/measures/new.html.erb</p>

<div class="background">
  <div class="bg-white rounded p-3 shadow">
    <h3>Create a measure</h3>
    <%= simple_form_for [@prescription,@measure] do |f| %>
      <%= f.input :title, placeholder: 'The title of your followup' %>
      <%= f.input :description, placeholder: 'Give us more information'%>
      <%= f.input :valeur, placeholder: 'Give us more information'%>
      <%= f.input :unit, placeholder: 'Give us more information'%>
      <%= f.input :start_date, placeholder: 'When did it start?'%>
      <%= f.input :end_date, placeholder: 'When did it end?'%>
      <%= f.input :hourly_frequency, placeholder: 'How many times per hour?'%>
      <%= f.input :day_frequency, placeholder: 'How many times per day?'%>
      <%# <%= f.input :photo_url, as: :file %>
      <%= f.submit class: 'btn btn-ghost'%>
    <% end %>
  </div>
</div>
