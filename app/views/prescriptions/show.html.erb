<div class="header">
  <div class= "header-title">
  <% if user_signed_in? %>
    <h1>Ordonnance</h1>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="my-2 ">
    <h1 class =""><strong><%= @prescription.title %></strong> </h1>
    <h4><%= @prescription.practician %></h4>
    <p><%= @prescription.description %></p>
    <p> Debut : <strong><%= @prescription.start_date %></strong> - Fin : <strong><%= @prescription.end_date %></strong></p>
    <p>Rappel de renouvellement : <%= @prescription.end_date-5 %></p>
  </div>

  <%= link_to 'Modifier mon ordonnance', edit_prescription_path(@prescription), class: "m-1 bouton d-flex justify-content-center" %>

  <div class="m-3 d-flex align-items-center justify-content-between">
    <h2 class = "my-1">Mes traitements</h2>
    <p class = "plus"><%= link_to "+", new_prescription_follow_up_path(@prescription) %></p>
  </div>

  <div>
    <ul class = "list-group">
      <% @prescription.follow_ups.each do |f| %>
        <li class = "m-1 bouton d-flex justify-content-center"><%= link_to f.title, prescription_follow_up_path(@prescription,f) %></li>
      <% end %>
    </ul>
    <p class = "">
    </p>
  </div>

  <div class = "m-3 d-flex align-items-center justify-content-between">
    <h2 class = "my-1">Mes mesures</h2>
    <p class = "plus"><%= link_to "+", new_prescription_measure_path(@prescription) %></p>
  </div>
  <div>
    <ul class = "list-group">
      <% @prescription.measures.each do |m| %>
        <li class = "m-1 bouton d-flex justify-content-center"><%= link_to m.title, prescription_measure_path(@prescription,m) %></li>
      <% end %>
    </ul>
  </div>
</div>
