<div class="header">
  <div class= "header-title">
  <% if user_signed_in? %>
    <h1>Modifier un relevé </h1>
    <% end %>
  </div>
</div>
 <div class="edit-form">
    <div class="container form">
  <div class="bg-white rounded p-3 shadow">
    <%= simple_form_for @measure, data: { controller: 'flatpickr' } do |f| %>
    <div>
      <%= f.input :title, placeholder: 'Titre', label: "Titre" %>
      <%= f.input :description, placeholder: 'Description', label: "Description"%>
      <%= f.input :unit, placeholder: 'ex : ml', label: "Unité de mesure"%>
      </div>


      <div>
      <%= f.input :start_date, label: "Commence le", as: :string, input_html: { data: { flatpickr_target: "startTime" } }, value: 'Commence le' %>
      <%= f.input :end_date, label: "Fini le", as: :string, input_html: { data: { flatpickr_target: "endTime" }, id: 'end_time' }, value: 'Fini le' %>
      </div>

      <div>
      <%= f.input :hourly_frequency, placeholder: 'ex: 4', label: "Fréquence journalière des mesures"%>
      <%= f.input :day_frequency, placeholder: 'ex: 2', label: 'Fréquence de prise (en jours)'%>
      </div>
      <%# <%= f.input :photo_url, as: :file %>
      <%= f.submit class: 'bouton edit-style', value: "Modifier mon relevé"%>
    <% end %>
  </div>
</div>
</div>
