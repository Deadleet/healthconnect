<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>




<%= month_calendar(events: @prescriptions+@follow_ups) do |date, prescriptions, follow_ups| %>
  <%= date %>

  <% prescriptions.each do |prescription| %>
    <div class= 'prescription-calendar'>
      <%= prescription.title %>
    </div>
  <% end %>

  <% follow_ups.each do |follow_up| %>
    <div class= 'follow-calendar'>
      <%= follow_up.title %>
    </div>
  <% end %>

<% end %>

<div class="container">

  <div class="footer">
    <div class="btn-footer">
      <i class="fa-solid fa-qrcode" style="color: #49516f;" ></i>
    </div>
      <i class="fa-solid fa-magnifying-glass" style="color: #49516f;"></i>
      <i class="fa-solid fa-house" style="color: #49516f;"></i>
      <i class="fa-regular fa-comments" style="color: #49516f;"></i>
    </div>
  </div>
</div>
