<div class="header">
  <div class= "header-title">
  <% if user_signed_in? %>
    <h1>Mes prescriptions</h1>
    <% end %>
  </div>
</div>
<div class = "container mt-1">
  <div class="medical-file bg-transparent d-flex justify-content-center m-2">
      <div class= "plus">
        <p><%= link_to '+', new_prescription_path, class: ""%></p>
      </div>
  </div>
  <ul class = "list-group" style = "padding-left: 0px">
    <% @prescriptions.each do |prescription| %>
      <% if (Date.today <= prescription.end_date && prescription.start_date <= Date.today) %>
        <%= link_to(prescription_path(prescription)) do %>
          <div class = "m-1 bouton d-flex justify-content-center">
            <p><%= prescription.title %></p>
          </div>
        <% end %>
      <% else %>
        <%# <div>
        <p class = "card-title h2"> Vous n'avez pas de prescription </p>
        </div> %>
      <% end %>
    <% end %>
  </ul>
</div>


