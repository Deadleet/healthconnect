<div class="header">
  <div class= "header-title">
  <% if user_signed_in? %>
    <h1>Mon traitement</h1>
    <% end %>
  </div>
</div>
<div class = "container">
<div class = "d-flex justify-content-between">
  <h1><strong><%= @followup.title %></strong></h1>
  <p class = "mt-2"><%= link_to "✏️", edit_prescription_follow_up_path(@prescription, @followup),class: "" %></p>
</div>

<p><%= @followup.description %></p>
<p> Debut : <strong><%= @followup.start_date %></strong> - Fin : <strong><%= @followup.end_date %></strong></p>
<p>Posologie : <%= @followup.posology %>. Tous les <%= @followup.hourly_frequency %> jour(s), <%= @followup.day_frequency %> fois/jour</p>


  <div class ="my-2">

    <%= link_to(prescription_path(@prescription)) do %>
      <div class = "d-flex justify-content-center">
        <div class ="m-1 bouton justify-content-center">
          <i class="fa-sharp fa-solid fa-arrow-left" style="color: #49516F;"></i>
        </div>
      </div>
    <% end %>
  </div>
</div>
