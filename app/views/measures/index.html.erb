<div class="header">
  <div class= "header-title">
  <% if user_signed_in? %>
    <h1>Suivi des mesures</h1>
    <% end %>
  </div>
</div>
<div class = "container">

      <% @prescriptions.each do |prescription| %>
        <% prescription.measures.each do |measure| %>
          <%= link_to(prescription_measure_path(prescription, measure)) do %>
            <div class="measures">
              <div class="measure-title">
                <strong><%= measure.title %></strong>
              </div>

              <p class = "text-left"><%= measure.start_date %></p>
            </div>

            <div class="measures">
              <%= line_chart measure.measurements_for_graph,
                xtitle: "Dates", ytitle: "Values",
                colors: ["#b00", "#666"]
                %>
            </div>
          <% end %>
        <% end %>
      <% end %>


</div>

