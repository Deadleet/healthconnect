<div class="container">

  <h1><%= @measure.title %></h1>
  <p><%= @measure.description %></p>
  <p><%= @measure.valeur %> Unité de mesure : <%= @measure.unit %></p>
  <p>Debut <%= @measure.start_date %> fin :<%= @measure.end_date %></p>
  <p>Tous les <%= @measure.day_frequency %> jour(s)</p>
  <p><%= @measure.hourly_frequency %> fois par jour</p>

  <%= link_to "Modifier", edit_measure_path(@measure), class: "btn btn-primary" %>

  <h4 class = "mt-2">Mes prises de mesures</h4>
  <ul class = "list-group">
    <% @measure.measurements.each do |measurement| %>
      <li class = "list-group-item" ><p><%= measurement.created_at %></p>
        <div class = "d-flex justify-content-between">
          <h4><%= measurement.value %> <%= measurement.measure.unit %></h4>
          <%= link_to "modifier", edit_prescription_measure_measurement_path(@prescription, @measure, measurement), class: "btn btn-primary"  %>
        </div>
      </li>
    <% end %>
  </ul>


  <div class = "d-flex">
    <p><%= link_to "Nouvelle mesure", new_prescription_measure_measurement_path(@prescription, @measure), class: "mt-2 btn-bi" %></p>
    <p><%= link_to "Retour à l'ordonnance", prescription_path(@prescription),class: "m-2 btn-bi" %></p>
  </div>
</div>
