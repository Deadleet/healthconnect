<div class="container">
  <%= month_calendar(events: @prescriptions + @follow_ups + @measures + @appointments) do |date, events| %>
    <%= date %>

    <% events.each do |event| %>
      <% if event.is_a?(Prescription) %>
        <div class="prescription-calendar">
          <%# <%= event.title %>
          <p></p>
        </div>
      <% elsif event.is_a?(FollowUp) %>
        <div class="follow-up-calendar">
          <%# <%= event.title.first %>
          <p></p>
        </div>
      <% elsif event.is_a?(Measure) %>
        <div class="measure-calendar">
          <%# <%= event.title %>
          <p></p>
        </div>
         <% elsif event.is_a?(Appointment) %>
         <div class="appointment-calendar">
          <%# <%= event.title %>
          <p></p>
         </div>
      <% end %>
    <% end %>
  <% end %>

  <p>Légende :</p>
  <div class="d-flex">
    <div class = "prescription-calendar">
    </div>
    <p>: Prescription</p>
  </div>

  <div class="d-flex">
    <div class = "follow-up-calendar">
    </div>
    <p>: Traitement</p>
  </div>

  <div class="d-flex">
    <div class = "measure-calendar">
    </div>
    <p>: Auto-relevé</p>
  </div>

  <div class="d-flex">
    <div class = "appointment-calendar">
    </div>
    <p>: Rendez-vous</p>
  </div>


  <p><%= link_to "Ajouter un rdv", new_appointment_path, class: "btn-bi"%></p>
  <%# <p><%= link_to "Modifier un rdv", edit_appointment_path, class: "btn-bi"%>
</div>
