
<h1 class="edit-form"> Modifier votre ordonnance</h1>
<div class="form">
      <%= simple_form_for @prescription, data: { controller: 'flatpickr' } do |f| %>

      <div>
        <%= f.input :title, placeholder: 'Titre' %>
        <%= f.input :description, placeholder: 'Description'%>
        </div>

        <div>
        <%= f.input :start_date, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
        <%= f.input :end_date, as: :string, input_html: { data: { flatpickr_target: "endTime" }, id: 'end_time' } %>
        </div>

        <div>
        <%= f.input :practician, placeholder: 'The name of the practician'%>
        </div>
        <%= f.submit 'modifier',class: 'btn btn-ghost' %>

  <% end %>
</div>
