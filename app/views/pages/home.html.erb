<div class="container">
  <% if user_signed_in? %>
    <h1>Bonjour <%= current_user.first_name%> 👋🏼</h1>
    <div class="medical-file justify-content-center my-5">
      <div class="col-12 col-lg-6">
        <h2 class = "mt-2">Voici les prises de mesure du jour 🩺</h2>
          <ul class = "list-group">
            <% @prescriptions.each do |prescription| %>
              <% prescription.measures.each do |measure| %>
                <li class = "list-group-item">
                  <%= link_to measure.title, prescription_measure_path(prescription, measure) %>
                </li>
              <% end %>
            <% end %>
          </ul>
      </div>

      <div class="col-12 col-lg-6">
        <h2 class = "mt-2">Voici mes traitements du jour 💊</h2>
          <ul class = "list-group">
            <% @prescriptions.each do |prescription| %>
              <% prescription.follow_ups.each do |followup| %>
                <li class = "list-group-item">
                  <%= link_to followup.title, prescription_follow_up_path(prescription, followup) %>
                </li>
              <% end %>
            <% end %>
          </ul>
      </div>
    </div>
  <% end %>
</div>
